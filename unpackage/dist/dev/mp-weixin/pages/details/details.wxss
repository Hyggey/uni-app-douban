.detailsBox {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.detailsBox .repeat_img {
    width: 100%;
    height: 100%;
}
.detailsBox .shade {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    background: rgba(255, 255, 255, 0.7);
    text-align: center;
    overflow-y: scroll;
}
.detailsBox .shade image {
      width: 640rpx;
      height: 800rpx;
      margin-top: 40rpx;
}
.detailsBox .shade .nav {
      padding: 0 60rpx;
}
.detailsBox .shade .nav .rating {
        text-align: left;
}
.detailsBox .shade .nav .content {
        text-align: left;
}
.detailsBox .shade .nav .content view:first-child {
          margin: 15rpx 0;
          font-size: 40rpx;
          font-weight: bold;
}
.detailsBox .shade .nav .content view:last-child {
          text-indent: 32rpx;
}

